<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ajouter une Formation</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container mt-5">
        <h1 class="mb-4">Ajouter une Formation</h1>
        <form action="/formations/add" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div class="mb-3">
                <label for="code_formation" class="form-label">Code Formation</label>
                <input type="text" class="form-control" id="code_formation" name="code_formation" required>
            </div>
            
            <div class="mb-3">
                <label for="intitule" class="form-label">Intitulé</label>
                <input type="text" class="form-control" id="intitule" name="intitule" required>
            </div>
            
            <div class="mb-3">
                <label for="domaine" class="form-label">Domaine</label>
                <select class="form-select" id="domaine" name="domaine" required>
                    <option value="">Choisissez un domaine</option>
                    <% domaines.forEach(domaine => { %>
                        <option value="<%= domaine._id %>"><%= domaine.libelle %></option>
                    <% }) %>
                </select>
            </div>
            
            <div class="mb-3">
                <label for="nombre_jours" class="form-label">Nombre de jours</label>
                <input type="number" class="form-control" id="nombre_jours" name="nombre_jours" required min="1">
            </div>
            
            <div class="mb-3">
                <label for="annee" class="form-label">Année</label>
                <input type="number" class="form-control" id="annee" name="annee" required min="2000" max="2100">
            </div>
            
            <div class="mb-3">
                <label for="mois" class="form-label">Mois</label>
                <select class="form-select" id="mois" name="mois" required>
                    <option value="">Choisissez un mois</option>
                    <option value="1">Janvier</option>
                    <option value="2">Février</option>
                    <option value="3">Mars</option>
                    <option value="4">Avril</option>
                    <option value="5">Mai</option>
                    <option value="6">Juin</option>
                    <option value="7">Juillet</option>
                    <option value="8">Août</option>
                    <option value="9">Septembre</option>
                    <option value="10">Octobre</option>
                    <option value="11">Novembre</option>
                    <option value="12">Décembre</option>
                </select>
            </div>
            
            <div class="mb-3">
                <label for="formateur" class="form-label">Formateur</label>
                <select class="form-select" id="formateur" name="formateur" required>
                    <option value="">Choisissez un formateur</option>
                    <% formateurs.forEach(formateur => { %>
                        <option value="<%= formateur._id %>"><%= formateur.nom %> <%= formateur.prenom %></option>
                    <% }) %>
                </select>
            </div>
            
            <div class="mb-3">
                <label for="nombre_participants" class="form-label">Nombre de participants</label>
                <input type="number" class="form-control" id="nombre_participants" name="nombre_participants" required min="1">
            </div>
            
            <button type="submit" class="btn btn-primary">Ajouter la formation</button>
        </form>
    </div>

    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>